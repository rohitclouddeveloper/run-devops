services:
  shopping.api:
    build:
      context: F:\Learning2022\MicroServices\GitCode\Shopping
      dockerfile: Shopping.API/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: shoppingapi
    ports:
    - target: 80
  shopping.client:
    build:
      context: F:\Learning2022\MicroServices\GitCode\Shopping
      dockerfile: Shopping.Client/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: shoppingclient
    ports:
    - target: 80
  shopping.db:
    container_name: shoppingdb
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
    volumes:
    - /site:/data/db:rw
version: '3.4'